<%- include("partials/header"); -%>

  <h1>Welcome!</h1>
  <p>
    <%= homeStartingContent %>
  </p>

  <hr>

  <% posts.forEach(function(post) { %>

    <h1>
      <%= post.title %>
    </h1>
    <p>
      <%= post.time %>
    </p>
    <p>
      <a href="/posts/<%= post._id %>" class="post-link">
        <%= post.content.substring(0,1000) + "..." %>
      </a>
    </p>
    <% }); %>

      <%- include("partials/footer"); -%>